<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".debugpage.DebugActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IoT开发工具 DemoApp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="登录"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="accountLogin"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="登出"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="accountLogout"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="设备配网"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="wifiDeviceConfig"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="蓝牙发现"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="bleDeviceDiscovery"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="Bone Debug"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="boneDebug"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="环境切换"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="envSwitch"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="扫描调试"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="scanDebug"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:text="获取服务器时间"
            android:background="@drawable/normalbutton_background"
            android:textColor="@drawable/normalbutton_textcolor"
            android:onClick="getAlinkTime"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="reload"
        android:text="重新加载"
        android:visibility="gone" />

    <ListView
        android:id="@+id/bone_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
    
</LinearLayout>
